@model AdminCreateUserViewModel
@{
	ViewData["Title"] = "Create Account";

	var roles = roleManager.Roles.ToList();
}

<section class="signup-section">
	<div class="container">
		<div class="signup">
			<div asp-validation-summary="ModelOnly"></div>
			<form method="post" enctype="multipart/form-data" class="signup-form">
				<div>
					<label asp-for="FirstName" class="form-label"></label>
					<input asp-for="FirstName" class="form-control" />
					<small class="text-danger"><span asp-validation-for="FirstName"></span></small>
				</div>
				<div>
					<label asp-for="LastName" class="form-label">Last Name*</label>
					<input asp-for="LastName" class="form-control" />
					<small class="text-danger"><span asp-validation-for="LastName"></span></small>
				</div>
				<div class="form-long">
					<label asp-for="StreetName" class="form-label">Street Name*</label>
					<input asp-for="StreetName" class="form-control" />
					<small class="text-danger"><span asp-validation-for="StreetName"></span></small>
				</div>
				<div>
					<label asp-for="PostalCode" class="form-label">Postal Code*</label>
					<input asp-for="PostalCode" class="form-control" />
					<small class="text-danger"><span asp-validation-for="PostalCode"></span></small>
				</div>
				<div>
					<label asp-for="City" class="form-label">City*</label>
					<input asp-for="City" class="form-control" />
					<small class="text-danger"><span asp-validation-for="City"></span></small>
				</div>
				<div>
					<label asp-for="Phonenumber" class="form-label">Mobile (Optional)</label>
					<input asp-for="Phonenumber" class="form-control" />
				</div>
				<div>
					<label asp-for="Company" class="form-label">Company (Optional)</label>
					<input asp-for="Company" class="form-control" />
				</div>
				<div class="form-long">
					<label asp-for="Email" class="form-label">E-mail*</label>
					<input asp-for="Email" class="form-control" />
					<small class="text-danger"><span asp-validation-for="Email"></span></small>
				</div>
				<div class="form-long">
					<label asp-for="Password" class="form-label">Password*</label>
					<input asp-for="Password" class="form-control" />
					<small class="text-danger"><span asp-validation-for="Password"></span></small>
				</div>
				<div class="form-long">
					<label asp-for="ConfirmPassword" class="form-label">Confirm Password*</label>
					<input asp-for="ConfirmPassword" class="form-control" />
					<small class="text-danger"><span asp-validation-for="ConfirmPassword"></span></small>
				</div>
				@if (User.IsInRole("Admin"))
				{
					<div class="role-select">
						<label class="form-label">Role</label>
						<select class="form-control" asp-for="Role">
							@foreach (var role in roles)
							{
								<option value="@role.Name">@role.Name</option>
							}

						</select>
					</div>
				}
				<button class="btn-theme" type="submit">SUBMIT</button>
			</form>

		</div>
	</div>
</section>