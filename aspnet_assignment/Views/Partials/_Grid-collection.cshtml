@model BestCollectionViewModel
@if(Model != null)
{
    <section class="grid-collection">
        <div class="container">
            <h1 class="collection-title">@Model.Title</h1>
            <ul class="categories">
                @foreach (var category in Model.Categories)
                {
                    <li class="category-item">@category.CategoryName</li>
                }


            </ul>
            <div class="grid">
                @foreach(var product in Model.Products.Take(8))
                {
                    @if(product != null)
                    {
                        <a asp-controller="Product" asp-action="ProductDetail" asp-route-id="@product?.Id" class="grid-item">
                            @foreach(var image in product.Images.Take(1))
                            {
                                if(image != null)
                                {
                                    <img src="~/images/products/@image.ImageUrl" alt="Product Image">
                                }
                                
                            }
                            
                            <div class="body">
                                <div class="title">@product?.Title</div>
                                <div class="info">
                                    <div class="price">$@product?.Price</div>
                                    <i class="add-cart fa-regular fa-cart-plus"></i>
                                </div>
                            </div>
                        </a>
                    }

                    @*<partial name="/Views/Partials/_Grid-item.cshtml" model="Item" />*@
                }
            </div>
            <partial name="/Views/Partials/Buttons/_Load-more-button.cshtml" />
        </div>
    </section>
}
